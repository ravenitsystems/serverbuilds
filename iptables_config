iptables -F
iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A INPUT -p tcp --dport 80 -m state --state NEW -m hashlimit --hashlimit-upto 25/min --hashlimit-burst 25 --hashlimit-mode srcip --hashlimit-name http --hashlimit-htable-expire 60000 -j ACCEPT
iptables -A INPUT -p tcp --dport 443 -m state --state NEW -m hashlimit --hashlimit-upto 25/min --hashlimit-burst 25 --hashlimit-mode srcip --hashlimit-name https --hashlimit-htable-expire 60000 -j ACCEPT


iptables -A INPUT -p tcp --dport 80 -j REJECT
iptables -A INPUT -p tcp --dport 443 -j REJECT
