wget $(echo "https://pkgs.sysadmins.ws/el9/base/x86_64/raven-release.el9.noarch.rpm" | sed "s/el9/el$(rpm -q --queryformat '%{RELEASE}' rpm | grep -oP 'el\K[0-9]+')/g")

rpm -ivh raven-release*.rpm

dnf clean all && sudo dnf update --assumeyes
